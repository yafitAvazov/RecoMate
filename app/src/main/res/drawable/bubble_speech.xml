<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- גוף הבועה -->
    <item>
        <shape>
            <solid android:color="#E0E0E0" /> <!-- צבע הרקע של הבועה -->
            <corners android:radius="18dp" /> <!-- פינות מעוגלות -->
        </shape>
    </item>

    <!-- זנב הבועה -->
    <item
        android:gravity="bottom|start"
        android:top="22dp"
        android:right="16dp">
        <shape>
            <solid android:color="#E0E0E0" />
            <path
                android:fillType="evenOdd"
                android:pathData="M0,0 L20,10 L0,30 Z" /> <!-- מגדיר את המשולש -->
        </shape>
    </item>
</layer-list>
