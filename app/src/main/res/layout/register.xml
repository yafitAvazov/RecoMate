<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue"
    tools:context=".ui.register.RegisterFragment">

    <!-- לוגו למעלה במרכז -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_cut"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- תוכן עיקרי מתחת ללוגו -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an Account"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxBackgroundColor="@color/black"
            android:layout_marginBottom="10dp"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edxtusername"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Username"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:backgroundTint="@color/white"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxBackgroundColor="@color/black"
            android:layout_marginBottom="10dp"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edxtemail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:backgroundTint="@color/white"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxBackgroundColor="@color/black"
            android:layout_marginBottom="10dp"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edxtpassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Password"
                android:textColor="@color/blue"
                android:inputType="textPassword"
                android:textColorHint="@color/blue"
                android:backgroundTint="@color/white"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxBackgroundColor="@color/black"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edxt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Confirm Password"
                android:textColor="@color/blue"
                android:inputType="textPassword"
                android:textColorHint="@color/blue"
                android:backgroundTint="@color/white"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/userRegisterButton"
            android:padding="12dp"
            android:text="Register"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/blue"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/edxt_confirm_password"
            app:layout_constraintStart_toStartOf="@+id/edxt_confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/edxt_confirm_password" />


        <ProgressBar
            android:id="@+id/registerProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/userRegisterButton"
            app:layout_constraintStart_toStartOf="@+id/userRegisterButton"
            app:layout_constraintTop_toBottomOf="@+id/userRegisterButton" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
