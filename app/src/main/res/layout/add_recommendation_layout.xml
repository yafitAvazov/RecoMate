<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/blue"
    tools:context=".ui.add_item.AddItemFragment">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_recommendation"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_name"
        android:textStyle="bold"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
       />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/black"
        android:layout_marginBottom="10dp"
        app:hintTextColor="@color/blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_title"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="@string/enter_item_title"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:backgroundTint="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView

        android:id="@+id/itemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_marginTop="15dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/fashion"
            android:id="@+id/btn1"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/food"
            android:id="@+id/btn2"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/game"
            android:layout_marginEnd="7dp"
            android:id="@+id/btn3"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/home"
            android:id="@+id/btn4"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/tech"
            android:id="@+id/btn5"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/sport"
            android:id="@+id/btn6"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/travel"
            android:id="@+id/btn7"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/beauty"
            android:id="@+id/btn8"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/book"
            android:id="@+id/btn9"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/shops"
            android:id="@+id/btn10"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/movie"
            android:id="@+id/btn11"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/health"
            android:id="@+id/btn12"
            android:layout_marginEnd="7dp"
            android:textSize="15sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"/>

    </GridLayout>
<!--    <EditText-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Add address (Optional)"-->
<!--        android:id="@+id/address_edt"-->
<!--        android:padding="16dp"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_optional"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/black"
        android:layout_marginBottom="10dp"
        app:hintTextColor="@color/blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address_edt"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="@string/enter_adress"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:backgroundTint="@color/white"/>

            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp">

        <!-- מחיר: טקסט מעל שדה המחיר -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- טקסט מעל שדה המחיר -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:textSize="20sp" />

            <!-- שדה המחיר -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:boxBackgroundColor="@color/black"
                android:layout_marginBottom="10dp"
                app:hintTextColor="@color/blue">>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/price"
                    android:layout_width="92dp"
                    android:layout_height="47dp"
                    android:hint="@string/_0_00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:backgroundTint="@color/white"/>/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- תמונה וכפתור -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_btn"
                android:layout_width="107dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_camera_alt_24" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/link"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/light_blue"
        app:boxBackgroundColor="@color/black"
        android:layout_marginBottom="10dp"
        app:hintTextColor="@color/blue">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/item_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:hint="@string/enter_link_of_item"

        android:textColorHint="@color/blue"
        android:backgroundTint="@color/white"/>

       />
</com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_empty"
            android:contentDescription="@string/star_1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_empty"
            android:contentDescription="@string/star_2" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_empty"
            android:contentDescription="@string/star_3" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_empty"
            android:contentDescription="@string/star_4" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/star_5"
            android:src="@drawable/star_empty"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comments"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/light_blue"
        android:layout_marginTop="15dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/black"
        android:layout_marginBottom="10dp"
        app:hintTextColor="@color/blue">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_comment"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:hint="@string/add_a_comment"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:backgroundTint="@color/white"/>/>/>
    </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/post_progress_bar"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Post"
            android:id="@+id/finish_btn"
            android:layout_gravity="center"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            android:layout_marginTop="10dp"/>



    </LinearLayout>
</ScrollView>